# Anthropic Claude AI
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# PostgreSQL
POSTGRES_USER=stock
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=stockdb
DATABASE_URL=postgresql+asyncpg://stock:your_secure_password@postgres:5432/stockdb

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# 뉴스 API (NewsAPI.org - https://newsapi.org 에서 무료 발급)
NEWS_API_KEY=your_newsapi_key_here

# 점수 임계값
BUY_THRESHOLD=70.0
SELL_THRESHOLD=40.0
STOP_LOSS_PCT=-5.0
TAKE_PROFIT_PCT=15.0

# 가중치 (합산 1.0)
TECH_WEIGHT=0.6
NEWS_WEIGHT=0.4

# 이메일 알림 (Gmail 앱 비밀번호 사용)
# Google 계정 → 보안 → 2단계 인증 활성화 → 앱 비밀번호 생성
EMAIL_USER=your_gmail@gmail.com
EMAIL_APP_PASSWORD=your_16_char_app_password
NOTIFICATION_EMAIL=receiver@example.com

# 프론트엔드 (로컬 개발용)
NEXT_PUBLIC_API_URL=http://localhost:8000

# ────────────────────────────────────────────────
# NAS 24시간 구동 시 아래 항목만 .env에 입력
# (docker-compose.nas.yml 사용)
# ────────────────────────────────────────────────
# NEXT_PUBLIC_API_URL 는 NAS 구성에서는 설정 불필요
# (nginx가 /api/* 라우팅 담당, 자동으로 상대 URL 사용)
