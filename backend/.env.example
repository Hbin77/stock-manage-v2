# PostgreSQL
POSTGRES_USER=stock
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=stockdb
DATABASE_URL=postgresql+asyncpg://stock:your_secure_password@postgres:5432/stockdb

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
